{
  "name": "trackmania-replay-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run express:dev\" \"npm run next:dev\"",
    "express:start": "npm run start --prefix packages/express",
    "express:dev": "npm run dev --prefix packages/express",
    "next:dev": "npm run dev --prefix packages/next",
    "next:build": "npm run build --prefix packages/next",
    "next:start": "npm run start --prefix packages/next",
    "remotion:preview": "npm run preview --prefix packages/remotion",
    "remotion:render": "npm run render --prefix packages/remotion",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "dependencies": {
    "@remotion/eslint-plugin": "3.3.101",
    "@types/node": "^20.2.5",
    "@types/react": "18.2.9",
    "@types/react-dom": "18.2.4",
    "concurrently": "^8.2.0",
    "encoding": "^0.1.13",
    "eslint": "8.42.0",
    "eslint-config-next": "^13.4.6",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "5.1.3"
  },
  "workspaces": [
    "packages/express",
    "packages/next",
    "packages/remotion"
  ]
}
